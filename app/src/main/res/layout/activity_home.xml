<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/layoutToolbar"
                layout="@layout/toolbar_home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_newProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutToolbar"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:text="New Product"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_coming_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutToolbar"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/btn_newProduct"
                android:background="@color/white"
                android:onClick="openProduct"
                android:text="Coming Product"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viepage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/btn_newProduct"
                android:layout_marginTop="20dp" />

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_navigation_header"
        app:menu="@menu/menu_action" />
</androidx.drawerlayout.widget.DrawerLayout>